rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for most collections - users don't need to be logged in to view data
    match /schools/{document} {
      allow read: if true;  // Anyone can read school information
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    match /teams/{document} {
      allow read: if true;  // Anyone can read team information
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    match /players/{document} {
      allow read: if true;  // Anyone can read player information and stats
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    match /games/{document} {
      allow read: if true;  // Anyone can read game information and live scores
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    match /schedules/{document} {
      allow read: if true;  // Anyone can read schedule information
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    match /articles/{document} {
      allow read: if true;  // Anyone can read articles
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    match /teamStats/{document} {
      allow read: if true;  // Anyone can read team statistics
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    match /sports/{document} {
      allow read: if true;  // Anyone can read sport information
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    // User-specific data - only the user themselves can access
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin-only collections (if you have any)
    match /admin/{document} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Catch-all rule for any other collections - public read, authenticated write
    match /{collection}/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
} 